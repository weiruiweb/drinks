/**index.wxss**/
page{
	min-height:100%;
	width:100%;
	background:#f2f2f2;
}
.page-body image{
	width:540rpx;
	height:540rpx;
	margin-top:30rpx;
	background:#fff;
}
swiper{
	height:660rpx;
	text-align:center;
}
.pro_price,.pro_price{
	width:50%;
	height:50rpx;

}
.sale_price{
	color:#c11e22;
}
.sale_price .txt1{
	font-size:20rpx;
}
.sale_price .txt2{
	font-size:40rpx;
	font-weight:bold;
	color:#c11e22;
}
.yuan{
	font-size:24rpx;
	color:#666;
	text-decoration:line-through;
}
.pro_buy{
	margin-top:30rpx;
	height:80rpx;
}
.buy{
	width:334rpx;
	height:80rpx;
	border-radius:15rpx;
	font-size:30rpx;
	color:#fff;
	line-height:80rpx;
	text-align:center;
	background:linear-gradient(to right,rgba(113,36,36,1.00),rgba(169,103,103,1.00));
	float:right;
}
.product{
	background:#ffff;
}
.pro_tlt{
	line-height:120rpx;
	font-size:30rpx;
	color:#333;
}
.pro_cont{
	font-size:26rpx;
	color:#666;
}
.pro_detail{
	padding:5.8%;
	width:88.4%;
	background:#fff;
	margin-top:20rpx;
	margin-bottom:150rpx;
}
.detail_two{
	height:70rpx;
	border:solid 1px #550f0f;
	border-radius:15rpx;
	line-height:70rpx;
	font-size:26rpx;
	color:#666;
}
.detail_img,.detail_txt{
	width:50%;
	text-align:center;
	
}

.add_bg{
	background:#550f0f;
	border-radius:10rpx 0 0 10rpx;
	color:#fff;
}
.add_bg1{
	background:#550f0f;
	border-radius:0rpx 5rpx 5rpx 0rpx;
	color:#fff;
}
.detail_name{
	width:25%;
	font-size:28rpx;
}
.detail_cont{
	width:75%;
	font-size:26rpx;
}
.detail_list{
	margin-top:56rpx;
}
.detail_list image{
	width:80%;
	height:300rpx;
	margin:0px auto;
}
.changeCont{
	display:none;
}