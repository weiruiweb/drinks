<view class="order_sort" style="{{fonts[5].font}}">
  <view class="order_click" data-id="0" bindtap="order_click" >
      <view class="sort_txt"  style="{{currentId == 0?'color:#550f0f;border-bottom:solid 2px #550f0f':'border-bottom:solid 2px #fff'}}">全部</view>
  </view>
   <view class="order_click" data-id="1" bindtap="order_click" style="{{currentId == 1?'color:#550f0f':''}}">
      
      <view class="sort_txt"  style="{{currentId == 1?'color:#550f0f;border-bottom:solid 2px #550f0f':'border-bottom:solid 2px #fff'}}">待付款</view>
  </view>
  <view class="order_click" data-id="2" bindtap="order_click" style="{{currentId == 2?'color:#550f0f':''}}">
      <view class="sort_txt"  style="{{currentId == 2?'color:#550f0f;border-bottom:solid 2px #550f0f':'border-bottom:solid 2px #fff'}}">待发货</view>
  </view>
