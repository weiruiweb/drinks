/**index.wxss**/
page{
	min-height:100%;
	width:100%;

}
.banner{
	position:relative;
	overflow:hidden;
}
.banner_img{
	width:100%;
	height:350rpx;
}
.banner image{
	height:350rpx;
	width:100%;

}
.banner_cont{
	width:52%;
	position:absolute;
	left:40%;
	top:30%;
	overflow:hidden;
}
.banner_tlt{
	font-size:30rpx;
	color:#333;
}
.banner_keywords{
	width:165rpx;
	height:38rpx;
	background:#550f0f;
	text-align:center;
	line-height:38rpx;
	font-size:18rpx;
	color:#fff;
	margin:10rpx 0;
}
.banner_desc{
	font-size:20rpx;
	color:#747474;
}
.news{
	width:710rpx;
	height:80rpx;
	border-radius:50rpx;
	background:#fff;
	position:relative;
	bottom:40rpx;
	border:solid 1px #e0e0e0;
	margin:0 auto;
}
.news_left{
	width:14%;
	text-align:center;
	border-right:solid 1px #e0e0e0;
}
.news_right{
	width:82%;

	height:80rpx;
	font-size:24rpx;
	color:#666;
	line-height:80rpx;
	overflow:hidden;
	position:relative;
}
.news_left image{
	width:36rpx;
	height:36rpx;
	transition:all 2s;
	animation:rotate 1s infinite;
}
.product_tlt{
	width:262rpx;
	height:65rpx;
	margin:0 auto 40rpx;
	position:relative;
}
.product_tlt image{
	width:262rpx;
	height:65rpx;
}
.tlt_cont{
	width:262rpx;
	height:65rpx;
	text-align:center;
	line-height:65rpx;
	position:absolute;
	top:0;
	left:0;
	font-size:30rpx;
	color:#333;
}
.pro_bg{
	width:100%;
	height:330rpx;

}
.pro_bg image{
	width:100%;
	height:330rpx;
}
.product_cont{
	position:relative;
	align-items:center;
}
.product_show{
	position:absolute;
	top:45rpx;
	left:0;
	width:100%;
	overflow:hidden;
	height:270rpx;
}
.product_left,.product_right{
	width:50%;
	height:270rpx;
	text-align:center;
	overflow:hidden;
}
.product_left{
	line-height:270rpx;
	align-items:center;
}
.product_left image{
	width:250rpx;
	height:250rpx;
}
.product_intro{
	width:72%;
	margin:0 auto;
	color:#550f0f;
}
.product_tlt1{
	font-size:30rpx;
	border-bottom:solid 1px #550f0f;
}
.product_attr{
	font-size:20rpx;
}
.product_buy{
	width:58%;
	margin:0 auto;
	overflow:hidden;
	position:relative;
	top:10rpx;
}
.pro_price text{
	display:inline-block;
	color:#666;
	font-size:20rpx;
	text-decoration:line-through;
}
.price_bg image{
	width:190rpx;
	height:52rpx;
	z-index:99;
}
.sale_price{
	text-align:center;
	font-size:18rpx;
	color:#550f0f;
	position:absolute;
	bottom:35rpx;
	left:40%;
}
.go_buy{
	width:54%;
	padding:0 2%;
	margin:0 auto;
	height:50rpx;
	border-radius:30rpx;
	background:linear-gradient(to right,rgba(113,36,36,1.00),rgba(169,103,103,1.00));
}
.buy_left{
	font-size:28rpx;
	font-weight:bold;
	color:#fff;
}
.buy_right{
	font-size:20rpx;
	color:#fff;
}
.buy_right image{
	width:10rpx;
	height:12rpx;
}
.pro_show{
	margin-top:40rpx;
	height:420rpx;
	margin-bottom:120rpx;
}
.show_left,.show_right{
	width:50%;
	height:420rpx;
}
.show1{
	height:50%;
	width:100%;
	text-align:center;
}
.show_left .show1{
	text-align:center;
}
.show_left .show1_img{
	width:188rpx;
	height:180rpx;
}
.show2{
	height:50%;
	border-bottom:solid 1px #e0e0e0;
	align-items:center;
}
.show2_right .text1{
	font-size:30rpx;
	color:#550f0f;
}
.show2_right .text2{
	font-size:20rpx;
	color:#550f0f;
}
.show2_left{
	text-align:center;
	color:#550f0f;
	font-size:30rpx;
}
.show2_left image{
	width:162rpx;
	height:124rpx;
}
.buy_btn{
	width:96%;
	padding:0 2%;
	margin:0 auto;
	height:50rpx;
	line-height:50rpx;
	border-radius:30rpx;
	background:linear-gradient(to right,rgba(113,36,36,1.00),rgba(169,103,103,1.00));
	font-size:24rpx;
	color:#fff;
	text-align:center;
}
.buy_btn image{
	width:10rpx;
	height:12rpx;
	margin-left:20rpx;
}
.show2_left,.show2_right{
	width:50%;
}
.show2_cont{
	height:192rpx;
	margin-top:15rpx;
}


.marquee_box {
  width: 92%;
  position: relative;
  padding:0 4%;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  padding:0px 20rpx;
}

@keyframes rotate{

 
  0%{
		transform: rotate(0);
	}
	20%{
		transform: rotate(3deg) ;
	}
	40%{
		transform: rotate(-3deg) ;
	}
	60%{
		transform: rotate(9deg);
	}
	80%{
		transform: rotate(-9deg) ;
	}
	100%{
		transform: rotate(0deg);
	}
   	
}


